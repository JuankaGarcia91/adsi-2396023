            ul.links {
                display: flex;
                flex-direction: column;
                padding: 0px;
                margin: 20px;
                gap: 10px;
            }

            ul.links li a:link,
            ul.links li a:visited {
                background-color: #ffffff11;
                border: 1px solid #000000cc;
                display: flex;
                border-radius: 20px;
                color: #000;
                padding: 4px 16px;
                text-decoration: none;
                transition: all 0.2s ease-in;
                width: 350px
            }

            ul.links li a:hover {
                background-color: #ffffff66;
            }

            
